<form method="post" action="{{ path('collection_point_delete', {'id': collection_point.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce point de collecte?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ collection_point.id) }}">
    <button class="btn">Supprimer</button>
</form>
