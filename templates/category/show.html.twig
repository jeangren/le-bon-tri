{% extends 'base.html.twig' %}

{% block Usages endblock %}

{% block body %}
    <h1>Usages</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Devenir</th>
                <td>{{ category.devenir }}</td>
            </tr>
               <tr>
                <th>Picto</th>
                <td>{{ category.picture }}</td>
            </tr>
        </tbody>
    </table>
<div class="row justify-content-center">
   

    <a href="{{ path('category_edit', {'id': category.id}) }}"><button class="btn" style="margin-right:20px"><i class="fa fa-pencil" aria-hidden="true"></i></button></a>

    {{ include('category/_delete_form.html.twig') }} 
    
    <a href="{{ path('category_index') }}"><button class="btn" style="margin-left:20px">Liste des usages</button></a>
</div>
{% endblock %}
