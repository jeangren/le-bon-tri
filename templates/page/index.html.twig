{% extends 'base.html.twig' %}

{% block title %}Page index
{% endblock %}

{% block body %}
	<h1>Page index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Title</th>
				<th>Content</th>
				<th>PageName</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for page in pages %}
				<tr>
					<td>{{ page.id }}</td>
					<td>{{ page.title }}</td>
					<td>{{ page.content }}</td>
					<td>{{ page.pageName }}</td>
					<td>
						<a href="{{ path('page_show', {'id': page.id}) }}">Voir</a>
						<a href="{{ path('page_edit', {'id': page.id}) }}">Modifier</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">Aucun article trouvé</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<button class="btn btn-primary">
		<a href="{{ path('page_new') }}">Créer</a>
	</button>
{% endblock %}
