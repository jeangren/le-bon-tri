{% extends 'base.html.twig' %}

{% block title %}Objet
{% endblock %}

{% block body %}
	<h1>Objet</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ objet.id }}</td>
			</tr>
			<tr>
				<th>Nom de l'objet</th>
				<td>{{ objet.name }}</td>
			</tr>
			<tr>
				<th>Nom complet de l'objet</th>
				<td>{{ objet.newName }}</td>
			</tr>
			<tr>
				<th>Mat√©riaux</th>
				<td>{{ objet.materialId.name }}</td>

			</tr>
			<tr>
				<th>Usage</th>
				<td>{{ objet.useId.name }}</td>
			</tr>
			<tr>
				<th>Valide</th>
				<td>{{ objet.valide ? 'Yes' : 'No' }}</td>
			</tr>

		</tbody>
	</table>
	<div class="row justify-content-center">

		<a href="{{ path('objet_edit', {'id': objet.id}) }}">
			<button class="btn" style="margin-right:30px">
				<i class="fa fa-pencil" aria-hidden="true"></i>
			</button>
		</a>
		{{ include('objet/_delete_form.html.twig') }}
		<a href="{{ path('objet_index') }}">
			<button class="btn" style="margin-left:30px">Liste d'objets</button>
		</a>
	</div>

{% endblock %}
