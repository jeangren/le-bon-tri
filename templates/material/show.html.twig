{% extends 'base.html.twig' %}

{% block title %}Material
{% endblock %}

{% block body %}
	<h1>Material</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ material.id }}</td>
			</tr>
			<tr>
				<th>Nom du matériau</th>
				<td>{{ material.name }}</td>
			</tr>
			<tr>
				<th>Devenir</th>
				<td>{{ material.devenir }}</td>
			</tr>
			<tr>
				<th>Picto</th>
				<td>{{ material.picture }}</td>
			</tr>
		</tbody>
	</table>

	<div class="row justify-content-center">

		<a href="{{ path('material_edit', {'id': material.id}) }}">
			<button class="btn" style="margin-right:30px">
				<i class="fa fa-pencil" aria-hidden="true"></i>
			</button>
		</a>

		{{ include('material/_delete_form.html.twig') }}
		<a href="{{ path('material_index') }}">
			<button class="btn" style="margin-left:30px">Retour à la liste</button>
		</a>
	</div>
{% endblock %}
