{% extends 'base.html.twig' %}

{% block title %}Consigne de tri
{% endblock %}

{% block body %}


	<div class="container mt-5">
		<div class="row">

			{% if consignesTriByMaterial.devenir is not null and consignesTriByMaterial.devenir is defined %}
				<div class="card mb-3" style="max-width: 800px;">
				<div class="row no-gutters">
					<div class="col-md-4">
						<img src="{{ asset('/assets/img/pictoResult/' ~ consignesTriByMaterial.picture) }}" class="card-img" alt="...">
					</div>
					<div class="col-md-8">
						<div class="card-body">
							<h5 class="card-title">	Consigne de tri: {{ consignesTriByMaterial.devenir }}</h5>

							<p class="card-text">Si votre {{name}} en {{consignesTriByMaterial.name}} est hors d'usage, géolocalisez-vous pour trouvez la déchetterie la plus proche</p>
							<a href="{{path('material_search', {'id' : consignesTriByMaterial.id})}}" class="btn btn-success">Trouver un point de collecte</a>

						</div>
					</div>
				</div>
			</div>
			{% endif %}
			
			{% if consignesTriByUse.devenir is not null and consignesTriByUse.devenir is defined %}
								
			
			<div class="card mb-3" style="max-width: 800px;">
				<div class="row no-gutters">
					<div class="col-md-4">
						<img src="{{ asset('/assets/img/pictoResult/donner.png') }}" class="card-img" alt="...">
					</div>
					<div class="col-md-8">
						<div class="card-body">
							<h5 class="card-title">
								Et si on valorisait autrement : {{ consignesTriByUse.devenir }}</h5>

							<p class="card-text">Si votre objet peut encore servir, géolocalisez-vous pour trouvez un endroit où lui donner une seconde vie</p>
							<a href="{{path('category_search', {'id' : consignesTriByUse.id})}}" class="btn btn-success">Trouver un point de collecte</a>

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endif %}

{% endblock %}
